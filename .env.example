# Flask 설정
SECRET_KEY=your-secret-key-here
FLASK_ENV=development

# 데이터베이스 설정
# SQLite (기본값 - 주석 처리시 SQLite 사용)
# DATABASE_URL=sqlite:///instance/hrmanagement.db

# PostgreSQL (Docker Compose 사용시)
DATABASE_URL=postgresql://hrm_user:your-password-here@localhost:5432/hrmanagement_db

# ========================================
# AI 서비스 설정
# ========================================

# Gemini API (AI Studio) - 무료, 빠른 설정
# https://aistudio.google.com/app/apikey 에서 발급
GEMINI_API_KEY=your-gemini-api-key

# Google Cloud Platform 설정 (Vertex AI, Document AI용)
# 서비스 계정 JSON 파일 경로
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# GCP 프로젝트 ID
GOOGLE_PROJECT_ID=your-project-id

# GCP 리전 (기본: 서울)
GOOGLE_LOCATION=asia-northeast3

# Document AI Processor ID (Document AI 사용시)
DOCUMENTAI_PROCESSOR_ID=your-processor-id

# Local LLM 설정 (LM Studio 사용시)
# LM Studio 서버 엔드포인트 (기본: localhost:1234)
LOCAL_LLM_ENDPOINT=http://localhost:1234
LOCAL_LLM_MODEL=local-model
LOCAL_LLM_TIMEOUT=120
